    if [[ -z "$tbl" || "$tbl" == "describe .table" ]]; then
        echo "ERROR: No table name provided for '.table'."
        echo "Usage: ${PROGNAME} describe .table TABLENAME"
        exit 1
    fi
    run_sqlite "PRAGMA table_info($tbl);"
